{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs", 
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true, 
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "coverage",
    "jest.config.js"
  ]
}
